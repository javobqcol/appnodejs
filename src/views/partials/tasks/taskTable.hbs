
{{#if tasks}}
    <table class="table table-bordered table-hover table-dark">
        <thead>
            <tr>
                <th>N.</th>
                <th>Title</th>
                <th>Description</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            {{#each tasks}}
                <tr>
                    <td>{{@index}}</td>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>
                        {{#if done}}
                            <a href="/toogleDone/{{_id}}" class="btn btn-dark">Undone</a>
                        {{else}}
                            <a href="/toogleDone/{{_id}}" class="btn btn-success">done</a>
                        {{/if}}
                        <a href="/delete/{{_id}}" class="btn btn-danger">Delete</a>
                        <a href="/edit/{{_id}}"class="btn btn-info">Update</a>
    
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
        <h1>No Task</h1>
        <img src="icons/registration-icon.svg" alt="">
    </div>
</div>
{{/if}}